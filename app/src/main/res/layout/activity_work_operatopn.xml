<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/work_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_who"
        android:layout_width="176dp"
        android:layout_height="79dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="52dp"
        android:hint="кто поручает работу"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_document"
        android:layout_width="202dp"
        android:layout_height="76dp"
        android:hint="На основании чего"
        app:layout_constraintBottom_toBottomOf="@+id/text_who"
        app:layout_constraintEnd_toEndOf="@+id/text_next_part_inf"
        app:layout_constraintTop_toTopOf="@+id/text_who" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_next_part_inf"
        android:layout_width="203dp"
        android:layout_height="77dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="На основании чего"
        app:layout_constraintBottom_toBottomOf="@+id/text_next_part"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_next_part"
        android:layout_width="172dp"
        android:layout_height="77dp"
        android:layout_marginTop="56dp"
        android:hint="Следующая деталь"
        app:layout_constraintStart_toStartOf="@+id/text_who"
        app:layout_constraintTop_toBottomOf="@+id/text_who" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_note"
        android:layout_width="392dp"
        android:layout_height="67dp"
        android:layout_marginTop="68dp"
        android:hint="Примечание"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_next_part" />

    <Button
        android:id="@+id/saveDescription"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginBottom="96dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>